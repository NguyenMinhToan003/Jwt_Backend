<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Center List User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div class="container">
      <ul class="nav">
        <li><a class="active" href="/">Home</a></li>
        <li><a href="/user">List User</a></li>
        <li><a href="/signup">SignUp</a></li>
        <li><a href="/centerListUser">Center</a></li>
        <li><a href="/about">About</a></li>
      </ul>
      <h3 class="title">Center List User</h3>
      <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <%for(var i=0; i < data.length ; i ++) {%>

        <tr>
  
          <th scope="row"><%=data[i].id%></th>
          <td><%=data[i].name%></td>
          <td><%=data[i].email%></td>
          <td>
          <div class="option">
            <a  href="/user-detail/<%=data[i].id%>"  type="button" class="btn btn-primary">Details</a>
            <form action="/editUser/<%= data[i].id %>" method="GET" target="_blank">
              <input type="text" hidden />
              <button type="submit" class="btn btn-warning">Edit</button>
            </form>
            <form action="/deleteUser/<%= data[i].id %>" method="POST" >
              <input
                type="text"
                hidden
                value="<%= data[i].id %> "
                name="id" />
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            
          
          </div>

            <!-- <a href="/deleteUser:<%=data[i].id %>" type="button" class="btn btn-danger">Delete</a> -->
            <!-- <a href="editUser:id"" type="button" class="btn btn-warning">Edit</a> -->
        </td>
        </tr>
        <% } %>
        
      </tbody>
    </div>
  </body>
</html>
